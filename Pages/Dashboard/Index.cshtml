@page
@model FreelancePM.Pages.Dashboard.IndexModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<div class="mb-4">
    <h4 class="fw-light">
        👋 @Model.Greeting, <span class="fw-semibold">@Model.Username</span>
    </h4>
    <p class="text-muted">Here's a quick overview of your freelance activity.</p>
</div>

<!-- KPI -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm mb-3 border-0">
            <div class="card-body">
                <h6 class="text-muted">Clients</h6>
                <h3>@Model.ClientsCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm mb-3 border-0">
            <div class="card-body">
                <h6 class="text-muted">Projects</h6>
                <h3>@Model.ProjectsCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm mb-3 border-0">
            <div class="card-body">
                <h6 class="text-muted">Tasks</h6>
                <h3>@Model.TasksCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm mb-3 border-0">
            <div class="card-body">
                <h6 class="text-muted">Active Tasks</h6>
                <h3>@Model.ActiveTasksCount</h3>
            </div>
        </div>
    </div>
</div>

<!-- Upcoming + Overdue Tasks -->
<div class="row mb-4">
    <div class="col-12">
        <h4>Upcoming & Overdue Tasks</h4>
        @if (Model.UpcomingTasks.Count == 0)
        {
            <p>No tasks due in the next 7 days or overdue.</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Project</th>
                        <th>Status</th>
                        <th>Deadline</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.UpcomingTasks)
                    {
                        <tr class="@(task.Deadline < DateTime.Now ? "table-danger" : "")">
                            <td>@task.Title</td>
                            <td>@task.Project?.Name</td>
                            <td>@task.Status?.Name</td>
                            <td>@task.Deadline.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- Grafice -->
<div class="row">
    <div class="col-md-6">
        <h5>Tasks by Status</h5>
        <canvas id="tasksChart" height="250"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>      
        // Tasks chart
        new Chart(document.getElementById('tasksChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusLabels)),
                datasets: [{
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusValues)),
                    backgroundColor: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusColors)),
                    borderWidth: 0
                }]
            },
            options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
        });
    </script>
}
