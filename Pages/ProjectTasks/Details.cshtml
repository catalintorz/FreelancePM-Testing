@page
@model FreelancePM.Pages.ProjectTasks.DetailsModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <h1 class="mb-1">Task Details</h1>
            <p class="text-muted mb-4">View task information.</p>

            <div class="card shadow-sm">
                <div class="card-body">

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Title</dt>
                        <dd class="col-sm-8">@Model.WorkTask.Title</dd>

                        <dt class="col-sm-4 text-muted">Description</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.WorkTask.Description)
                                                        ? "-"
                                                        : Model.WorkTask.Description)
                        </dd>

                        <dt class="col-sm-4 text-muted">Deadline</dt>
                        <dd class="col-sm-8">
                            @Model.WorkTask.Deadline.ToShortDateString()
                        </dd>

                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">
                            @Model.WorkTask.Status?.Name
                        </dd>

                        <dt class="col-sm-4 text-muted">Project</dt>
                        <dd class="col-sm-8">
                            @Model.WorkTask.Project?.Name
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            Back to list
                        </a>
                        <a asp-page="./Edit"
                           asp-route-id="@Model.WorkTask.Id"
                           class="btn btn-primary">
                            Edit
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
