@page
@inject Microsoft.Extensions.Localization.IStringLocalizer<FreelancePM.Resources.SharedResources> Localizer
@model FreelancePM.Pages.Clients.DetailsModel

@{
    ViewData["Title"] = Localizer["ClientDetails"];
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <h1 class="mb-1">@Localizer["ClientDetails"]</h1>
            <p class="text-muted mb-4">@Localizer["ClientDetailsDescription"]</p>

            <div class="card shadow-sm">
                <div class="card-body">

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">
                            @Localizer["Name"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Client.Name
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Localizer["Email"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Client.Email
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Localizer["Phone"]
                        </dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Client.Phone)
                                                        ? "-"
                                                        : Model.Client.Phone)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Localizer["Company"]
                        </dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Client.Company)
                                                        ? "-"
                                                        : Model.Client.Company)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Localizer["Notes"]
                        </dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Client.Notes)
                                                        ? "-"
                                                        : Model.Client.Notes)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            @Localizer["BackToList"]
                        </a>

                        <a asp-page="./Edit"
                           asp-route-id="@Model.Client.Id"
                           class="btn btn-primary">
                            @Localizer["Edit"]
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
