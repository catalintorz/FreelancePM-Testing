@page
@inject Microsoft.Extensions.Localization.IStringLocalizer<FreelancePM.Resources.SharedResources> Localizer
@model FreelancePM.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.ClientsText</h1>

<!-- Create Button -->
<a asp-page="Create" class="btn btn-outline-dark">
    ➕ @Model.CreateClientText
</a>
<br/>
<div class="mb-3 d-flex justify-content-between align-items-end">   
    <!-- Search -->
    <form method="get" class="d-flex gap-2">
        <input type="text"
               name="SearchTerm"
               value="@Model.SearchTerm"
               class="form-control"
               placeholder="@Localizer["SearchClient"]" />

        <button type="submit" class="btn btn-primary">
            🔍 @Localizer["Search"]

        </button>

        <a asp-page="./Index" class="btn btn-outline-secondary">
            ♻ @Localizer["Reset"]

        </a>
    </form>
</div>

<!-- TABEL CLIENTI -->
<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Contact"]</th>
            <th>@Localizer["Company"]</th>
            <th>@Localizer["Projects Count"]</th>
            <th>@Localizer["Notes"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var client in Model.Client)
        {
            <tr>
                <!-- Name -->
                <td class="fw-semibold">
                    @client.Name
                </td>

                <!-- Contact -->
                <td>
                    <div>@client.Email</div>
                    <small class="text-muted">@client.Phone</small>
                </td>

                <!-- Company -->
                <td>
                    @if (!string.IsNullOrEmpty(client.Company))
                    {
                        <span class="badge bg-secondary">
                            @client.Company
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>

                <!-- Projects Count -->
                <td>
                    @if (client.Projects != null && client.Projects.Count > 0)
                    {
                        <a asp-page="/Projects/Index"
                           asp-route-FilterClientId="@client.Id"
                           class="badge bg-info text-dark text-decoration-none">
                            @client.Projects.Count @Localizer["Projects"]
                        </a>
                    }
                    else
                    {
                        <span class="badge bg-secondary">0</span>
                    }
                </td>

                <!-- Notes -->
                <td class="text-muted">
                    @(string.IsNullOrEmpty(client.Notes) ? "—" : client.Notes)
                </td>

                <!-- Actions -->
                <td>
                    <div class="btn-group btn-group-sm" role="group">

                        <!-- View Projects -->
                        <a asp-page="/Projects/Index"
                           asp-route-FilterClientId="@client.Id"
                           class="btn btn-outline-dark">
                            📁 @Localizer["Projects"]
                        </a>

                        <a asp-page="./Edit"
                           asp-route-id="@client.Id"
                           class="btn btn-outline-primary">
                            ✏ @Localizer["Edit"]

                        </a>

                        <a asp-page="./Details"
                           asp-route-id="@client.Id"
                           class="btn btn-outline-secondary">
                            🔍 @Localizer["Details"]

                        </a>

                        <button type="button"
                                class="btn btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal-@client.Id">
                            🗑 @Localizer["Delete"]

                        </button>
                    </div>

                    <!-- DELETE MODAL -->
                    <div class="modal fade"
                         id="deleteModal-@client.Id"
                         tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <h5 class="modal-title">@Localizer["ConfirmDelete"]</h5>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"></button>
                                </div>

                                <div class="modal-body">
                                    @Localizer["DeleteClientQuestion", client.Name]
                                </div>

                                <div class="modal-footer">
                                    <button type="button"
                                            class="btn btn-secondary"
                                            data-bs-dismiss="modal">
                                        Cancel
                                    </button>

                                    <a asp-page="./Delete"
                                       asp-route-id="@client.Id"
                                       class="btn btn-danger">
                                        Delete
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>