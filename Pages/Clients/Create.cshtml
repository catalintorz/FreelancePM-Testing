@page
@inject Microsoft.Extensions.Localization.IStringLocalizer<FreelancePM.Resources.SharedResources> Localizer
@model FreelancePM.Pages.Clients.CreateModel

@{
    ViewData["Title"] = Localizer["CreateClient"];
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <h1 class="mb-1">@Localizer["CreateClient"]</h1>
            <p class="text-muted mb-4">@Localizer["CreateClientDescription"]</p>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Client.Name" class="form-label">
                                @Localizer["Name"] <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Client.Name" class="form-control" />
                            <span asp-validation-for="Client.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Client.Email" class="form-label">
                                @Localizer["Email"] <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Client.Email" class="form-control" />
                            <span asp-validation-for="Client.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Client.Phone" class="form-label"></label>
                            <input asp-for="Client.Phone" class="form-control" />
                            <span asp-validation-for="Client.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Client.Company" class="form-label"></label>
                            <input asp-for="Client.Company" class="form-control" />
                            <span asp-validation-for="Client.Company" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Client.Notes" class="form-label"></label>
                            <textarea asp-for="Client.Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Client.Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                @Localizer["Cancel"]
                            </a>

                            <button type="submit" class="btn btn-primary">
                                @Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
